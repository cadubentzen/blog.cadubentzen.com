---
layout: default.liquid
title: Soneca de Pudim
pagination:
  include: All
  per_page: 3
  permalink_suffix: "./{{ num }}/"
  order: Desc
  sort_by: ["published_date"]
  date_index: ["Year", "Month"]
---

{% for post in paginator.pages %}
  <section>
    <h2>
      <a href="/{{post.permalink}}">{{ post.title }}</a>
    </h2>
    <h4>
      {% if post.published_date %}
        {{ post.published_date | split: " " | first }}
      {% else %}
        Draft
      {% endif %}
    </h4>

    {{ post.excerpt | truncate: 1024 }}

    <p>
      <a href="/{{ post.permalink }}">Read more</a>
    </p>
  </section>
{% endfor %}

{% if paginator.previous_index_permalink %}
  <a href="/{{ paginator.previous_index_permalink }}">Previous</a>
{% endif %}

{% if paginator.next_index_permalink %}
  <a href="/{{ paginator.next_index_permalink }}">Next</a>
{% endif %}
